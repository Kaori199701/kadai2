<header>
<h1>Editing Book</h1>
</header>

<div class=edit_box>
  <%= form_with model: @book do |f| %>

  <div class=edit_contents>
    <h4>Title</h4>
    <%= f.text_field :title %>
  </div>

  <div class=edit_contents>
    <h4>Body</h4>
    <%= f.text_area :body %>
  </div>

    <%= f.submit 'Update Book' %>

    <br>
</div>

<div class=link>
  <!--Show-->
  <%= link_to "Show", book_path(@book.id) %>

  |

  <!--indexに戻る-->
  <a href="/books">Back</a>
</div>

<% end %>