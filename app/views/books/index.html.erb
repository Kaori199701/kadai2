<header>
   <h1>Books</h1>
</header>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="2"></th>
    </tr>
  </thead>


  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td class=index_title_box><%= book.title %></td>
        <td class=index_body_box><%= book.body %></td>
        <td class=button><%= link_to 'Show', book %></td>
        <td class=button><%= link_to 'Edit', edit_book_path(book) %></td>
        <td class=button><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<!--新規投稿-->

<div class=new_box>
  <h2>New book</h2>

  <% @book.errors.full_messages.each do |message| %>
    <div class="form-error">
       <%= message %>
    </div>
  <% end %>

  <%= form_with model: @book, method: :post do |f| %>
    <% if @book.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@book.errors.count, "error") %> prohibited this user from being saved:</h2>

        <ul>
          <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class=field>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </div>
    <div class=field>
      <%= f.label :body %><br>
      <%= f.text_area :body %>
    </div>
    <div class=actions>
      <%= f.submit %>
    </div>
  <% end %>
</div>